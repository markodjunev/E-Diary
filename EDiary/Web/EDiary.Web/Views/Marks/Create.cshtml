@model EDiary.Web.ViewModels.Teachers.Marks.InputModels.CreateMarkInputModel
@{
    ViewData["Title"] = "Add new mark";
}

<h2 class="text-center">Add new mark of @this.ViewBag.StudentInfo of subject @this.ViewBag.SubjectName</h2>
<hr />

<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <form class="w-30 mx-auto" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.NameOfExam" class="font-weight-bold"></label>
                </div>
                <input asp-for="@Model.NameOfExam" class="form-control" type="text" placeholder="Name of exam..." />
                <span asp-validation-for="@Model.NameOfExam" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.Score" class="font-weight-bold"></label>
                </div>
                <input asp-for="@Model.Score" class="form-control" type="number" placeholder="Score..." />
                <span asp-validation-for="@Model.Score" class="text-danger"></span>
            </div>

            <hr class="mt-3 hr-2" />

            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Add Mark</button>
            </div>
        </form>
    </div>
</div>