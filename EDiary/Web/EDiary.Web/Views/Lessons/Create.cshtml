@model EDiary.Web.ViewModels.Teachers.Lessons.InputModels.LessonCreateInputModel
@{ 
    ViewData["Title"] = "Create new lesson";
}

<h2 class="text-center">Create new lesson of @this.ViewBag.Details</h2>
<hr />

<div class="row">

    <div class="col-md-3">

    </div>
    <div class="col-md-6">

        <form class="w-30 mx-auto" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.Name" class="font-weight-bold"></label>
                </div>
                <input asp-for="@Model.Name" class="form-control" placeholder="Name..." />
                <div class="d-flex justify-content-center">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.StartAt" class="font-weight-bold"></label>
                    </div>
                    <input asp-for="@Model.StartAt" class="form-control" />
                    <div class="d-flex justify-content-center">
                        <span asp-validation-for="@Model.StartAt" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="@Model.FinishAt" class="font-weight-bold"></label>
                    </div>
                    <input asp-for="@Model.FinishAt" class="form-control" />
                    <div class="d-flex justify-content-center">
                        <span asp-validation-for="@Model.FinishAt" class="text-danger"></span>
                    </div>
                </div>

                <hr class="mt-3 hr-2" />

                <div class="form-group d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Add Lesson</button>
                </div>
</form>
    </div>
</div>