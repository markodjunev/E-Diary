@model EDiary.Web.ViewModels.Parents.Attendances.OuputViewModels.AllStudentsAttendancesByParentViewModel
@{
    ViewData["Title"] = "Latest attendances";
}

<h2 class="text-center">Latest attendances</h2>
<hr />

@if (Model.Attendances.Count() == 0)
{
    <h2 class="text-danger">Sorry but the student doesn't have any attendaces yet.</h2>
}
else
{
    <table class="table">
        <caption>List of attendances</caption>
        <thead>
            <tr>
                <th scope="col">Student names</th>
                <th scope="col">Subject name</th>
                <th scope="col">Name of Lesson</th>
                <th scope="col">Date</th>
                <th scope="col">IsAttended</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var attendance in Model.Attendances)
            {
            <tr>
                <td>@attendance.StudentFirstName @attendance.StudentLastName</td>
                <td>@attendance.LessonSubjectClassSubjectName</td>
                <td>@attendance.LessonName</td>
                <td>@attendance.LessonStartAt</td>
                <td>@attendance.IsAttended</td>
            </tr>
            }
        </tbody>
    </table>
}
