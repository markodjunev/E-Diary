@using EDiary.Common
@model EDiary.Web.ViewModels.Administration.Subjects.InputModels.SubjectCreateInputModel
@{
    ViewData["Title"] = "Add new subject";
}

<h1 class="text-center">Create a new subject in <a asp-area="" asp-controller="Schools" asp-action="Details" asp-route-id="@this.ViewBag.SchoolId">@this.ViewBag.SchoolName</a></h1>
<hr class="my-4">

<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <form class="w-30 mx-auto" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.Name" class="font-weight-bold"></label>
                </div>
                <input asp-for="@Model.Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <hr class="mt-3 hr-2" />

            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Add Subject</button>
            </div>
        </form>
    </div>
</div>
