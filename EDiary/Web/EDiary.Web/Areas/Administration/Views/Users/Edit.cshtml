@model EDiary.Web.ViewModels.Administration.Users.InputViewModels.UserEditInputModel
@{
    ViewData["Title"] = "Edit User";
}

<h1 class="text-center">Edit User</h1>

<hr />

<form method="post">
    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="@Model.FirstName" class="font-weight-bold"></label>
        </div>
        <input asp-for="@Model.FirstName" class="form-control" placeholder="FirstName..." />
        <div class="d-flex justify-content-center">
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="@Model.LastName" class="font-weight-bold"></label>
        </div>
        <input asp-for="@Model.LastName" class="form-control" placeholder="LastName..." />
        <div class="d-flex justify-content-center">
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="@Model.Email" class="font-weight-bold"></label>
        </div>
        <input asp-for="@Model.Email" class="form-control" type="email" placeholder="Email..." />
        <div class="d-flex justify-content-center">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="@Model.UniqueCitizenshipNumber" class="font-weight-bold"></label>
        </div>
        <input asp-for="@Model.UniqueCitizenshipNumber" class="form-control" placeholder="Unique Citizenship Number..." />
        <div class="d-flex justify-content-center">
            <span asp-validation-for="@Model.UniqueCitizenshipNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="@Model.Birthday" class="font-weight-bold"></label>
        </div>
        <input type="date" asp-for="@Model.Birthday" class="form-control" />
        <div class="d-flex justify-content-center">
            <span asp-validation-for="@Model.Birthday" class="text-danger"></span>
        </div>
    </div>

    <hr />

    <div class="d-flex justify-content-center">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
</form>