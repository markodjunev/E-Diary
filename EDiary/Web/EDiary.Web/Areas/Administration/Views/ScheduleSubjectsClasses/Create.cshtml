@model EDiary.Web.ViewModels.Administration.ScheduleSubjectsClasses.InputModels.ScheduleSubjectClassInputModel
@{
    ViewData["Title"] = "Add Schedule";
}

<h1 class="text-center">@this.ViewBag.SchoolName</h1>
<h3 class="text-center">Add schedule of @this.ViewBag.SubjectName to @this.ViewBag.Class</h3>
<hr />

<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.StartAt" class="font-weight-bold"></label>
                </div>
                <input asp-for="@Model.StartAt" class="form-control" />
                <div class="d-flex justify-content-center">
                    <span asp-validation-for="@Model.StartAt" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.FinishAt" class="font-weight-bold"></label>
                </div>
                <input asp-for="@Model.FinishAt" class="form-control" />
                <div class="d-flex justify-content-center">
                    <span asp-validation-for="@Model.FinishAt" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.DayOfWeek" class="font-weight-bold"></label>
                </div>
                <select asp-for="@Model.DayOfWeek" asp-items="Html.GetEnumSelectList<DayOfWeek>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <div class="d-flex justify-content-center">
                    <span asp-validation-for="@Model.DayOfWeek" class="text-danger"></span>
                </div>

            </div>

            <hr />
            <div class="d-flex justify-content-center">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
